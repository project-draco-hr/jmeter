{
  if (e.getStateChange() == ItemEvent.SELECTED) {
    if (e.getItem() == EDIT) {
      startingEdit=true;
      startEditing();
      startingEdit=false;
    }
 else {
      if (!startingEdit && combo.getSelectedIndex() >= 0) {
        combo.setEditable(false);
      }
      firePropertyChange();
    }
  }
}
