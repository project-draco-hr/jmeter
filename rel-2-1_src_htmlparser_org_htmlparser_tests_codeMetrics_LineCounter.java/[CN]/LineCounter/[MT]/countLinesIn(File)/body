{
  int count=0;
  System.out.println("Counting " + file.getName());
  try {
    BufferedReader reader=new BufferedReader(new FileReader(file.getAbsolutePath()));
    String line=null;
    do {
      line=reader.readLine();
      if (line != null && line.indexOf("*") == -1 && line.indexOf("//") == -1 && line.length() > 0)       count++;
    }
 while (line != null);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  return count;
}
