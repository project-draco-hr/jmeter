{
  createParser("<HTML>\n" + "<HEAD>\n" + "<TITLE>HTML Comment Test 'testEmptyComment'</TITLE>\n"+ "</HEAD>\n"+ "<BODY>\n"+ "<!>\n"+ "</BODY>\n"+ "</HTML>\n");
  parseAndAssertNodeCount(10);
