{
  this.add(mLabel);
  for (int idx=0; idx < items.length; idx++) {
    JRadioButton btn=new JRadioButton(items[idx]);
    btn.setActionCommand(items[idx]);
    btn.addActionListener(this);
    this.bGroup.add(btn);
    this.add(btn);
    if (selected != null && selected.equals(items[idx])) {
      btn.setSelected(true);
    }
  }
}
