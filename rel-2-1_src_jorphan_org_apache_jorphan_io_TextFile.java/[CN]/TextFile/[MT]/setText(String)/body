{
  Writer writer=null;
  try {
    if (encoding == null) {
      writer=new FileWriter(this);
    }
 else {
      writer=new OutputStreamWriter(new FileOutputStream(this),encoding);
    }
    writer.write(body);
    writer.flush();
    writer.close();
  }
 catch (  IOException ioe) {
    try {
      if (writer != null) {
        writer.close();
      }
    }
 catch (    IOException e) {
    }
    log.error("",ioe);
  }
}
