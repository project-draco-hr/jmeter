{
  StringBuffer buf=new StringBuffer();
  buf.append("<");
  buf.append(node.getNodeName());
  NamedNodeMap atts=node.getAttributes();
  for (int x=0; x < atts.getLength(); x++) {
    buf.append(" ");
    buf.append(atts.item(x).getNodeName());
    buf.append("=\"");
    buf.append(atts.item(x).getNodeValue());
    buf.append("\"");
  }
  buf.append(">");
  return buf.toString();
}
