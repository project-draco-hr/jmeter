{
  if (menuBar.isSelected()) {
    MenuElement[] menuElement=menuBar.getSubElements();
    if (menuElement != null) {
      for (int i=0; i < menuElement.length; i++) {
        JMenu menu=(JMenu)menuElement[i];
        if (menu.isSelected()) {
          menu.setPopupMenuVisible(false);
          menu.setSelected(false);
          break;
        }
      }
    }
  }
}
