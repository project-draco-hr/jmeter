  modulesPanel.add(nodesLabel);
  modulesPanel.add(warningLabel);
  add(modulesPanel);
  JPanel treePanel=new JPanel();
  treePanel.setLayout(new FlowLayout(FlowLayout.LEFT));
  treePanel.add(moduleToRunTreeNodes);
