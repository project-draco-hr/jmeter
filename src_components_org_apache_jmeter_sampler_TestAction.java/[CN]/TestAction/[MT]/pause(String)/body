{
  int milis;
  try {
    milis=Integer.parseInt(mili_s);
  }
 catch (  NumberFormatException e) {
    log.warn("Could not create number from " + mili_s);
    milis=0;
  }
  try {
    pauseThread=Thread.currentThread();
    TimeUnit.MILLISECONDS.sleep(milis);
  }
 catch (  InterruptedException e) {
  }
 finally {
    pauseThread=null;
  }
}
