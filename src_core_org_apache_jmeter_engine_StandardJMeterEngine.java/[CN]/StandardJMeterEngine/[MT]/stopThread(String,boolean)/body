{
  if (engine == null) {
    return false;
  }
  JMeterThread thrd=null;
synchronized (engine.allThreads) {
    Iterator<JMeterThread> iter=engine.allThreads.keySet().iterator();
    while (iter.hasNext()) {
      thrd=iter.next();
      if (thrd.getThreadName().equals(threadName)) {
        break;
      }
    }
  }
  if (thrd != null) {
    thrd.stop();
    thrd.interrupt();
    if (now) {
      Thread t=engine.allThreads.get(thrd);
      if (t != null) {
        t.interrupt();
      }
    }
    return true;
  }
  return false;
}
