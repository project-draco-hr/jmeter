{
  Iterator iter=new HashSet(allThreads.keySet()).iterator();
  while (iter.hasNext()) {
    JMeterThread item=(JMeterThread)iter.next();
    item.stop();
    item.interrupt();
    Thread t=(Thread)allThreads.get(item);
    if (t != null) {
      t.interrupt();
    }
 else {
      log.warn("Lost thread: " + item.getThreadName());
      allThreads.remove(item);
    }
  }
}
