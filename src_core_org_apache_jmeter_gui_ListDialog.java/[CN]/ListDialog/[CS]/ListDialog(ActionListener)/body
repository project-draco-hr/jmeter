{
  listData=new Vector();
  name=new JLabel(JMeterUtils.getResString("name"));
  value=new JLabel(JMeterUtils.getResString("add_value"));
  nameField=new JTextField(10);
  valueField=new JTextField(10);
  valueField.addKeyListener(this);
  GridBagLayout gridBag=new GridBagLayout();
  GridBagConstraints c=new GridBagConstraints();
  setLayout(gridBag);
  c.gridx=0;
  c.gridy=0;
  c.anchor=GridBagConstraints.EAST;
  c.weightx=0;
  add(name,c.clone());
  c.weightx=1;
  c.fill=GridBagConstraints.HORIZONTAL;
  c.gridx++;
  c.anchor=GridBagConstraints.WEST;
  add(nameField,c.clone());
  c.weightx=0;
  c.fill=GridBagConstraints.NONE;
  c.gridy++;
  c.gridx--;
  c.anchor=GridBagConstraints.EAST;
  add(value,c.clone());
  c.weightx=1;
  c.fill=GridBagConstraints.HORIZONTAL;
  c.gridx++;
  c.anchor=GridBagConstraints.WEST;
  add(valueField,c.clone());
  input=new JList();
  int x=0;
  c.fill=GridBagConstraints.BOTH;
  c.weightx=c.weighty=1;
  c.gridy++;
  c.gridx--;
  c.gridwidth=2;
  add(new JScrollPane(input),c.clone());
  c.gridwidth=1;
  c.weightx=.5;
  c.gridy++;
  c.weighty=0;
  c.fill=GridBagConstraints.NONE;
  c.anchor=GridBagConstraints.EAST;
  ok=new JButton("OK");
  cancel=new JButton("Cancel");
  ok.setPreferredSize(cancel.getPreferredSize());
  ok.addActionListener(listener);
  ok.addActionListener(this);
  cancel.addActionListener(listener);
  add(ok,c.clone());
  c.gridx=1;
  c.anchor=GridBagConstraints.WEST;
  add(cancel,c);
}
