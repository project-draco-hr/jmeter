{
  initializeTemplateList();
  this.getContentPane().setLayout(new BorderLayout(10,10));
  this.getContentPane().add(templateList,BorderLayout.NORTH);
  helpDoc.setContentType("text/html");
  helpDoc.setEditable(false);
  fillDescription();
  this.getContentPane().add(scroller,BorderLayout.CENTER);
  JPanel buttonsPanel=new JPanel(new FlowLayout(FlowLayout.CENTER));
  createFromTemplateButton=new JButton(JMeterUtils.getResString("template_create_from"));
  createFromTemplateButton.addActionListener(this);
  cancelButton=new JButton(JMeterUtils.getResString("cancel"));
  cancelButton.addActionListener(this);
  buttonsPanel.add(createFromTemplateButton);
  buttonsPanel.add(cancelButton);
  this.getContentPane().add(buttonsPanel,BorderLayout.SOUTH);
  this.pack();
  this.setMinimumSize(new Dimension(MINIMAL_BOX_WIDTH,MINIMAL_BOX_HEIGHT));
  ComponentUtil.centerComponentInWindow(this,50);
}
