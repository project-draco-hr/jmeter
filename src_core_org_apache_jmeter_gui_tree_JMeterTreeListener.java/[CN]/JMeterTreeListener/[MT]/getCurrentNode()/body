{
  if (currentPath != null) {
    if (currentPath.getLastPathComponent() != null) {
      return (JMeterTreeNode)currentPath.getLastPathComponent();
    }
 else {
      return (JMeterTreeNode)currentPath.getParentPath().getLastPathComponent();
    }
  }
 else {
    return (JMeterTreeNode)model.getRoot();
  }
}
