{
switch (button) {
case ADD_BUTTON:
    add.addActionListener(listener);
  break;
case EDIT_BUTTON:
edit.addActionListener(listener);
break;
case DELETE_BUTTON:
delete.addActionListener(listener);
break;
case LOAD_BUTTON:
load.addActionListener(listener);
break;
case SAVE_BUTTON:
save.addActionListener(listener);
break;
}
}
