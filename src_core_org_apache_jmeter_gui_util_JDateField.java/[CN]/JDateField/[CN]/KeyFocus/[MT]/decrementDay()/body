{
  Calendar calendar=new GregorianCalendar();
  if (day > 1) {
    day=day - 1;
  }
 else {
    if (mon == 1) {
      calendar.set(year,11,day);
    }
 else {
      calendar.set(year,mon - 2,day);
    }
    int noofdays=calendar.getActualMaximum(Calendar.DAY_OF_MONTH);
    day=noofdays;
    decrementMonth();
  }
}
