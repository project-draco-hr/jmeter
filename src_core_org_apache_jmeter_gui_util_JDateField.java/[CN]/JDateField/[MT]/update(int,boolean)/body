{
  Calendar c=parseDate(getText());
  int pos=getCaretPosition();
  int field=posToField(pos);
  if (shifted) {
    c.roll(field,true);
  }
 else {
    c.add(field,addend);
  }
  String newDate=dateFormat.format(c.getTime());
  setText(newDate);
  if (pos > newDate.length())   pos=newDate.length();
  setCaretPosition(pos);
}
