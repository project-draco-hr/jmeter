{
  addSeparator(menu);
  menu.add(makeMenuItem(JMeterUtils.getResString("cut"),"Cut",ActionNames.CUT,KeyStroke.getKeyStroke(KeyEvent.VK_X,KeyEvent.CTRL_MASK)));
  menu.add(makeMenuItem(JMeterUtils.getResString("copy"),"Copy",ActionNames.COPY,KeyStroke.getKeyStroke(KeyEvent.VK_C,KeyEvent.CTRL_MASK)));
  menu.add(makeMenuItem(JMeterUtils.getResString("paste"),"Paste",ActionNames.PASTE,KeyStroke.getKeyStroke(KeyEvent.VK_V,KeyEvent.CTRL_MASK)));
  menu.add(makeMenuItem(JMeterUtils.getResString("paste_insert"),"Paste Insert",ActionNames.PASTE));
  if (removable) {
    menu.add(makeMenuItem(JMeterUtils.getResString("remove"),"Remove",ActionNames.REMOVE,KeyStroke.getKeyStroke(KeyEvent.VK_DELETE,0)));
  }
}
