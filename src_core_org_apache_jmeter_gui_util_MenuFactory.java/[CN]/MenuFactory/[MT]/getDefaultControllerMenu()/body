{
  JPopupMenu pop=new JPopupMenu();
  pop.add(MenuFactory.makeMenus(new String[]{MenuFactory.CONTROLLERS,MenuFactory.SAMPLERS,MenuFactory.CONFIG_ELEMENTS,MenuFactory.TIMERS,MenuFactory.LISTENERS,MenuFactory.PRE_PROCESSORS,MenuFactory.POST_PROCESSORS},JMeterUtils.getResString("Add"),"Add"));
  pop.add(makeMenus(new String[]{MenuFactory.CONTROLLERS},JMeterUtils.getResString("insert_parent"),"Add Parent"));
  MenuFactory.addEditMenu(pop,true);
  MenuFactory.addFileMenu(pop);
  return pop;
}
