{
  Runtime.getRuntime().addShutdownHook(shutdownHook);
synchronized (LOCK) {
    instanceCount++;
    try {
      initializeFileOutput();
      if (getVisualizer() != null) {
        this.isStats=getVisualizer().isStats();
      }
    }
 catch (    Exception e) {
      log.error("",e);
    }
  }
  inTest=true;
  if (summariser != null) {
    summariser.testStarted(host);
  }
}
