{
  if (save.saveTime())   writer.addAttribute(ATT_TIME,Long.toString(res.getTime()));
  if (save.saveLatency())   writer.addAttribute(ATT_LATENCY,Long.toString(res.getLatency()));
  if (save.saveTimestamp())   writer.addAttribute(ATT_TIME_STAMP,Long.toString(res.getTimeStamp()));
  if (save.saveSuccess())   writer.addAttribute(ATT_SUCCESS,Boolean.toString(res.isSuccessful()));
  if (save.saveLabel())   writer.addAttribute(ATT_LABEL,ConversionHelp.encode(res.getSampleLabel()));
  if (save.saveCode())   writer.addAttribute(ATT_RESPONSE_CODE,ConversionHelp.encode(res.getResponseCode()));
  if (save.saveMessage())   writer.addAttribute(ATT_RESPONSE_MESSAGE,ConversionHelp.encode(res.getResponseMessage()));
  if (save.saveThreadName())   writer.addAttribute(ATT_THREADNAME,ConversionHelp.encode(res.getThreadName()));
  if (save.saveDataType())   writer.addAttribute(ATT_DATA_TYPE,ConversionHelp.encode(res.getDataType()));
  if (save.saveEncoding())   writer.addAttribute(ATT_DATA_ENCODING,ConversionHelp.encode(res.getDataEncoding()));
  if (save.saveBytes())   writer.addAttribute(ATT_BYTES,String.valueOf(res.getBytes()));
  if (save.saveSampleCount()) {
    writer.addAttribute(ATT_SAMPLE_COUNT,String.valueOf(res.getSampleCount()));
  }
  if (save.saveThreadCounts()) {
    writer.addAttribute(ATT_GRP_THRDS,String.valueOf(res.getGroupThreads()));
    writer.addAttribute(ATT_ALL_THRDS,String.valueOf(res.getAllThreads()));
  }
}
