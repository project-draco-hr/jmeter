{
  textUI.discardAllEdits();
  textUI.setSyntaxEditingStyle(SyntaxConstants.SYNTAX_STYLE_JAVA);
  textUI.setCodeFoldingEnabled(true);
  textUI.setAntiAliasingEnabled(true);
  textUI.addFocusListener(this);
