{
  if (log.isDebugEnabled()) {
    log.debug(text == null ? "<-null" : "<-\"" + text + "\"");
  }
  String value;
  if (text == null) {
    if (!acceptsNull)     throw new IllegalArgumentException("Null parameter not allowed");
    value=null;
  }
 else {
    if (acceptsExpressions && isExpression(text)) {
      value=text;
    }
 else {
      typeEditor.setAsText(text);
      value=typeEditor.getAsText();
      if (!acceptsOther && !isATag(text))       throw new IllegalArgumentException("Value not allowed: " + text);
    }
  }
  guiEditor.setValue(value);
}
