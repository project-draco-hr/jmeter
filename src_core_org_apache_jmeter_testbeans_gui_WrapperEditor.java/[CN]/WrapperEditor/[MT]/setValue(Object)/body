{
  String text;
  if (log.isDebugEnabled()) {
    log.debug("<-" + (value != null ? value.getClass().getName() : "NULL") + ":"+ value);
  }
  if (value == null) {
    if (!acceptsNull)     throw new IllegalArgumentException("Null is not allowed");
    text=null;
  }
 else   if (acceptsExpressions && isExpression(value)) {
    text=(String)value;
  }
 else {
    typeEditor.setValue(value);
    text=typeEditor.getAsText();
    if (!acceptsOther && !isATag(text))     throw new IllegalArgumentException("Value not allowed: " + text);
  }
  guiEditor.setValue(text);
}
