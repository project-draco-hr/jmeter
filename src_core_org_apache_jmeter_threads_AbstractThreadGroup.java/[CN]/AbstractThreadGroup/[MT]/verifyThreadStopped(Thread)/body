{
  boolean stoppedAll=true;
  if (thread != null) {
    if (thread.isAlive()) {
      try {
        thread.join(WAIT_TO_DIE);
      }
 catch (      InterruptedException e) {
      }
      if (thread.isAlive()) {
        stoppedAll=false;
        log.warn("Thread won't exit: " + thread.getName());
      }
    }
  }
  return stoppedAll;
}
