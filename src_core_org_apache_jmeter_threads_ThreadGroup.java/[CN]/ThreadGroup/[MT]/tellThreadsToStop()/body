{
  running=false;
  if (delayedStartup) {
    try {
      threadStarter.interrupt();
    }
 catch (    Exception e) {
      log.warn("Exception occured interrupting ThreadStarter");
    }
  }
  for (  Entry<JMeterThread,Thread> entry : allThreads.entrySet()) {
    JMeterThread item=entry.getKey();
    item.stop();
    item.interrupt();
    Thread t=entry.getValue();
    if (t != null) {
      t.interrupt();
    }
  }
}
