{
  createParser("<A HREF='mailto:somik@yahoo.com'>hello</A>","http://www.cj.com/");
  parser.addScanner(new LinkScanner("-l"));
  parseAndAssertNodeCount(1);
  assertTrue("Node should be a HTMLLinkTag",node[0] instanceof LinkTag);
