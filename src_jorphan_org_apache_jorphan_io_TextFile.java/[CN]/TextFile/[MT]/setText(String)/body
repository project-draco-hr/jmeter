{
  try {
    Writer writer;
    if (encoding == null) {
      writer=new FileWriter(this);
    }
 else {
      writer=new OutputStreamWriter(new FileOutputStream(this),encoding);
    }
    writer.write(body);
    writer.flush();
    writer.close();
  }
 catch (  IOException ioe) {
    log.error("",ioe);
  }
}
