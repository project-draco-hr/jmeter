{
  StringBuffer ret=new StringBuffer(input.length());
  int start=0;
  int index=-1;
  final int length=pattern.length();
  while ((index=input.indexOf(pattern,start)) >= start) {
    ret.append(input.substring(start,index));
    ret.append(sub);
    start=index + length;
  }
  ret.append(input.substring(start));
  return ret.toString();
}
