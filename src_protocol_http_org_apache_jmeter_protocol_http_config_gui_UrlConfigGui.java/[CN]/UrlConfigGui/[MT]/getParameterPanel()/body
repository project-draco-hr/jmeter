{
  postContentTabbedPane=new ValidationTabbedPane();
  argsPanel=new HTTPArgumentsPanel();
  postContentTabbedPane.add(JMeterUtils.getResString("post_as_parameters"),argsPanel);
  if (showRawBodyPane) {
    postBodyContent=new JSyntaxTextArea(30,50);
    postContentTabbedPane.add(JMeterUtils.getResString("post_body"),new JTextScrollPane(postBodyContent));
  }
  return postContentTabbedPane;
}
