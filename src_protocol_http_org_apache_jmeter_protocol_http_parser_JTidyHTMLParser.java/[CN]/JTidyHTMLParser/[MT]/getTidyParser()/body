{
  log.debug("Start : getParser");
  Tidy tidy=new Tidy();
  tidy.setInputEncoding("UTF8");
  tidy.setOutputEncoding("UTF8");
  tidy.setQuiet(true);
  tidy.setShowWarnings(false);
  if (log.isDebugEnabled()) {
    log.debug("getParser : tidy parser created - " + tidy);
  }
  log.debug("End   : getParser");
  return tidy;
}
