{
  ((HttpURLConnection)connection).setRequestMethod("POST");
  connection.setRequestProperty("Content-length","" + getXmlData().length());
  if (getHeaderManager().getPropertyAsString(HTTPSampler.CONTENT_TYPE).length() > 0) {
    connection.setRequestProperty("Content-type",getHeaderManager().getPropertyAsString(HTTPSampler.CONTENT_TYPE));
  }
 else {
    connection.setRequestProperty("Content-type","text/xml");
  }
  connection.setDoOutput(true);
}
