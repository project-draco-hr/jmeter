{
  useCount++;
  try {
    if (con != null) {
      if (System.currentTimeMillis() - lastAccessed > accessInterval) {
        inMaintenance=true;
        reset.start();
      }
 else       if (useCount >= maxUsage) {
        inMaintenance=true;
        reset.start();
      }
 else       if (con.isClosed()) {
        inMaintenance=true;
        reset.start();
      }
    }
 else {
      inMaintenance=true;
      reset.start();
    }
  }
 catch (  SQLException e) {
    inMaintenance=true;
    reset.start();
  }
  inUse=false;
  lastAccessed=System.currentTimeMillis();
}
