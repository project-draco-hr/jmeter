{
  this.key=key;
  this.maxConnections=((JMeterProperty)properties.get(CONNECTIONS)).getIntValue();
  int maxUsage=((JMeterProperty)properties.get(MAXUSE)).getIntValue();
  validateMaxConnections();
  connectionArray=new ConnectionObject[maxConnections];
  try {
    for (int i=0; i < maxConnections; i++) {
      connectionArray[i]=new ConnectionObject(key,maxUsage);
    }
  }
 catch (  SQLException e) {
    log.error("Error initializing JDBC connection pool",e);
    throw new ConnectionPoolException("Error initializing JDBC connection pool: " + e);
  }
}
