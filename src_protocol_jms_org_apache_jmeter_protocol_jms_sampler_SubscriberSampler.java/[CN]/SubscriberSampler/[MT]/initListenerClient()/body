{
  timeout=getTimeoutAsLong();
  interrupted=false;
  OnMessageSubscriber sub=(OnMessageSubscriber)ClientPool.get(this);
  if (sub == null) {
    sub=new OnMessageSubscriber(getUseJNDIPropertiesAsBoolean(),getJNDIInitialContextFactory(),getProviderUrl(),getConnectionFactory(),getDestination(),isUseAuth(),getUsername(),getPassword());
    queue.clear();
    sub.setMessageListener(this);
    sub.resume();
    ClientPool.addClient(sub);
    ClientPool.put(this,sub);
    log.debug("SubscriberSampler.initListenerClient called");
    log.debug("loop count " + getIterations());
  }
  return sub;
}
