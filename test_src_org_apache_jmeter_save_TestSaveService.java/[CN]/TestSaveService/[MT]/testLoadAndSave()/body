{
  byte[] original=new byte[1000000];
  boolean failed=false;
  for (int i=0; i < FILES.length; i++) {
    InputStream in=new FileInputStream(new File("testfiles/" + FILES[i]));
    int len=in.read(original);
    in.close();
    in=new ByteArrayInputStream(original,0,len);
    HashTree tree=SaveService.loadTree(in);
    in.close();
    ByteArrayOutputStream out=new ByteArrayOutputStream(1000000);
    SaveService.saveTree(tree,new OutputStreamWriter(out));
    out.close();
    if (len != out.size()) {
      failed=true;
      System.out.println();
      System.out.println("Loading file bin/testfiles/" + FILES[i] + " and "+ "saving it back changes its size from "+ len+ " to "+ out.size()+ ".");
    }
  }
  if (failed) {
    fail("One or more failures detected");
  }
}
